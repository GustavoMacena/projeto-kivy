Manager:
    Menu:
        name: 'Menu'
    Game:
        name: 'Game'
    GameOver:
        name: 'gameover'
    ChoosePlayer:
        name: 'chooseplayer'

<MenuButton@Button>:
    background_normal: 'assets/botao.png'
    background_down: 'assets/botao-hover.png'

<Menu>:
    BoxLayout:
        canvas:
            Color:
                rgba:1,1,1,1
            Rectangle: 
                size: self.size
                pos: self.pos
                source: 'assets/screens/menu3.png'

        orientation: 'vertical'
        padding: '200dp', '30dp'
        spacing: '350dp'

        Widget:
            size_hint_y: 1.5

        BoxLayout:
            spacing: '100dp'
            MenuButton: 
                text: 'Jogar'
                font_size: '30dp'
                font_name: 'assets/Monocraft'
                on_release: app.root.current = 'Game'
            MenuButton:
                text: 'Escolher\nPersonagem'
                font_size: '30dp'
                font_name: 'assets/Monocraft'
                on_release: app.root.current = 'chooseplayer'
            MenuButton:
                text: 'Sair'
                font_size: '30dp'
                font_name: 'assets/Monocraft'
                on_release: app.stop()

<Player>
    source: app.current_player_image

<Game>:
    FloatLayout:
        canvas:
            Color:
                rgba:1,1,1,1
            Rectangle: 
                size: self.size
                pos: self.pos
                source: 'assets/screens/layout.png'
        Label:
            text: 'Score: ' + str(root.score)
            font_name: 'assets/Monocraft'
            font_size: '70sp'
            bold: True
            size_hint_y: None
            height: self.font_size
            y: root.height*0.95 - self.height
        Label:
            text: 'HighScore: ' + str(root.highscore)
            font_name: 'assets/Monocraft'
            font_size: '30sp'
            bold: True
            size_hint_y: None
            height: self.font_size
            y: root.height*0.85 - self.height
        Player:
            id: player
            allow_stretch: True
            size_hint: None, None
            size: root.height/8 , root.height/8
            x: root.width/20
            y: root.height/2

<GameOver>:
    BoxLayout:
        canvas:
            Color:
                rgba:1,1,1,1
            Rectangle: 
                size: self.size
                pos: self.pos
                source: 'assets/screens/layout.png'

        orientation: 'vertical'
        padding: '200dp', '30dp'
        spacing: '50dp'
        
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp', '10dp'
            spacing: '10dp'
            size_hint_y: 0.3 
            pos_hint: {'center_x': 0.5, 'top': 1}
            Label:
                text: 'Ratuê bateu em um prédio e morreu'
                font_name: 'assets/Monocraft'
                font_size: '50sp'  
                color: '#854bb8'  
                bold: True
                size_hint_y: None
                height: self.font_size
            Label:
                text: 'Seu Score foi:' + str(root.score)
                font_name: 'assets/Monocraft'
                font_size: '30sp' 
                bold: True
                size_hint_y: None
                height: self.font_size

        Image:
            source: 'assets/players/ratue_gameover.png'

        BoxLayout:
            spacing: '100dp'
            MenuButton: 
                text: 'Tentar de novo'
                font_size: '30dp'
                font_name: 'assets/Monocraft'
                size_hint: 0.3, 0.5
                on_release: app.root.current = 'Game'
            MenuButton:
                text: 'Menu'
                font_size: '30dp'                
                font_name: 'assets/Monocraft'
                size_hint: 0.3, 0.5
                on_release: app.root.current = 'Menu'

<ChoosePlayer>:
    BoxLayout:
        canvas:
            Color:
                rgba:1,1,1,1
            Rectangle: 
                size: self.size
                pos: self.pos
                source: 'assets/screens/layout.png'

        orientation: 'vertical'
        padding: '200dp', '30dp'  
        spacing: '100dp'  

        BoxLayout:
            orientation: 'vertical'
            padding: '10dp', '10dp'
            spacing: '10dp'
            size_hint_y: 0.3 
            pos_hint: {'center_x': 0.5, 'top': 1}
            Label:
                text: 'Escolha seu personagem'
                font_name: 'assets/Monocraft'
                font_size: '30sp'  
                bold: True
                size_hint_y: None
                height: self.font_size
            Label:
                text: root.playerlist[root.count]
                font_name: 'assets/Monocraft'
                font_size: '50sp'  
                color: '#854bb8'
                bold: True
                size_hint_y: None
                height: self.font_size
            Label:
                text: root.message
                font_name: 'assets/Monocraft'
                font_size: '20sp'
                color: '#525252'
                bold: True
                size_hint_y: None
                height: self.font_size

        BoxLayout:
            orientation: 'horizontal'
            spacing: '10dp'  
            size_hint_y: 0.3 
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MenuButton: 
                text: '<'
                font_size: '30dp'
                font_name: 'assets/Monocraft'
                size_hint: 0.3, 0.5
                on_release: root.ChangePlayerLeft()
            AsyncImage:
                source: root.currentplayer
                size_hint: 0.8, 0.8  
                allow_stretch: True
                keep_ratio: True
            MenuButton:
                text: '>'
                font_size: '30dp'                
                font_name: 'assets/Monocraft'
                size_hint: 0.3, 0.5
                on_release: root.ChangePlayerRight()

        MenuButton:
            text: 'Jogar'
            font_size: '30dp'                
            font_name: 'assets/Monocraft'
            size_hint_y: 0.2  
            size_hint_x: 0.5
            pos_hint: {'center_x': 0.5, 'y': 0}
            on_release: app.root.current = 'Game'

<Obstacle>:
    canvas:
        Color: 
            rgba: 1,1,1,1
        Rectangle: 
            size: self.size
            pos: self.pos
            source: 'assets/building.png'
    size_hint: None, None
    width: '100dp'